                    <!--android:textColor="@color/blueGrey700"/>-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Max Epoch"
                    android:textColor="@color/customeTeal"/>
            <EditText
                    android:id="@+id/maxEpoch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Epoch"
                    android:textColor="@color/blueGrey700"
                    android:textColorHint="#ccc"
                    android:numeric="integer"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Max Error"
                    android:textColor="@color/customeTeal"/>
            <EditText
                    android:id="@+id/targetError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Error"
                    android:textColor="@color/blueGrey700"
                    android:textColorHint="#ccc"
                    android:numeric="decimal"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Alpha"
                    android:textColor="@color/customeTeal"/>
            <EditText
                    android:id="@+id/alpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Alpha"
                    android:textColor="@color/blueGrey700"
                    android:textColorHint="#ccc"
                    android:numeric="decimal"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Hidden Neuron"
                    android:textColor="@color/customeTeal"/>
            <EditText
                    android:id="@+id/neuronHidden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0 Neuron"
                    android:textColor="@color/blueGrey700"
                    android:textColorHint="#ccc"
                    android:numeric="integer"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blueGrey700"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="0dp"
                        android:text="@string/pca_setting"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="@color/blueGrey700"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="PCA Reduction"
                    android:textColor="@color/customeTeal"/>
            <EditText
                    android:id="@+id/reduksiPCA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0 Reduction"
                    android:textColor="@color/blueGrey700"
                    android:textColorHint="#ccc"
                    android:numeric="integer"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blueGrey700"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="0dp"
                        android:text="@string/idetification_mode"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="@color/blueGrey700"/>
            </LinearLayout>
            <RadioGroup android:id="@+id/identifyMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                <RadioButton android:id="@+id/liveIdentify"
                             android:layout_width="wrap_content"
                             android:buttonTint="@color/customeTeal"
                             android:textColor="@color/blueGrey700"
                             android:text="Live"
                             android:layout_height="wrap_content"/>
                <RadioButton android:id="@+id/manualIdentify"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="From File"
                             android:textColor="@color/blueGrey700"
                             android:buttonTint="@color/customeTeal"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>